<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/meals_navigation"
    app:startDestination="@id/mealsSearchFragment">

    <fragment
        android:id="@+id/mealsSearchFragment"
        android:name="com.mmarengo.myrecipe.view.meals.MealsSearchFragment"
        android:label="MealsSearchFragment" >
        <action
            android:id="@+id/action_mealsSearchFragment_to_mealDetailFragment"
            app:destination="@id/mealDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/mealDetailFragment"
        android:name="com.mmarengo.myrecipe.view.detail.MealDetailFragment"
        android:label="MealDetailFragment" >
        <argument
            android:name="meal"
            app:argType="com.mmarengo.myrecipe.model.Meal" />
    </fragment>
</navigation>
